{
  "name": "LoopTube",
  "version": "1.0",
  "description": "Loop clips in YouTube",
  "permissions": ["tabs", "declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/looptube16.png",
      "32": "images/looptube32.png",
      "48": "images/looptube48.png",
      "128": "images/looptube128.png"
    }
  },
  "icons": {
    "16": "images/looptube16.png",
    "32": "images/looptube32.png",
    "48": "images/looptube48.png",
    "128": "images/looptube128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://s.ytimg.com https://www.youtube.com; object-src 'self'"
}